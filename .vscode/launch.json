{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug node script (current open file)",
            "program": "${file}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Rollup: Node",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/rollup",
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeArgs": [
                "--inspect",
            ],
            "args": [
                "-c"
            ],
            "windows": {
                "program": "${workspaceFolder}/node_modules/rollup/dist/bin/rollup",
            },
            "port": 9229,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mgoost: build",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeArgs": [
                "--inspect-brk",
                "./node_modules/mangoost/dist/bin/mgoost",
                "--build"
            ],
            "port": 9229,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mgoost: Parcel build",
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "env": {
                "NODE_ENV": "development",
                "PARCEL_WORKERS": "1"
            },
            "runtimeArgs": [
                "--inspect-brk",
                "./node_modules/mangoost/dist/bin/mgoost",
                "--build"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "port": 9229,
            "console": "integratedTerminal"
        }
    ]
}